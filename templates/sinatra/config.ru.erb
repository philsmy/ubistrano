require 'sinatra'
require 'rubygems'

Sinatra::Application.default_options.merge!(
  :run => false,
  :env => :production,
  :raise_errors => true,
  :app_file => 'init.rb',
  :root => '<%= deploy_to %>/current',
  :views => '<%= deploy_to %>/current/views',
  :public => '<%= deploy_to %>/current/public'
)

log = File.new('<%= deploy_to %>/shared/log/sinatra.log', 'a')
STDOUT.reopen(log)
STDERR.reopen(log)

require 'init'
run Sinatra.application